#!/bin/bash

# GLOBAL
alias c=clear
alias cdc="cd && clear"
alias del="rm -rf"
alias e=exit
alias gmc="gitmoji -c"
alias god=sudo
alias k=killall
alias kter="killall iTerm2"
alias lcl=localhost
alias localsh="cd /usr/local/bin"
alias md="vim README.md"
alias o="open ."
alias tch=touch
alias trash="sudo rm -rf ~/.Trash/* && rm -rf ~/.Trash/.*"
alias vs="code ."

# DIRECTORIES
alias apl="cd /Applications"
alias dev="cd ~/Dev"
alias doc="cd ~/Documents"
alias dll="cd ~/Downloads"
alias dsk="cd ~/Desktop"

# SHUTDOWN
alias bye="sudo shutdown -h now"

# REBOOT
alias rbt="sudo shutdown -r now"

# PACKAGE MANAGER
alias ny="npm i && yarn"

# YARN
alias y=yarn

alias ya="yarn add"
alias yad="yarn add --dev"
alias yga="yarn global add"

alias yr="yarn remove"
alias ygr="yarn global remove"

alias yb="yarn build"
alias ydp="yarn deploy"
alias ydv="yarn dev"
alias ye="yarn eject"
alias yst="yarn start"
alias ysr="yarn serve"
alias yt="yarn test"
alias yw="yarn watch"

# NPM
alias n=npm

alias ni="npm i"
alias nid="npm i --save-dev"
alias nig="npm i -g"

alias nu="npm uninstall"
alias nug="npm uninstall -g"

alias nrb="npm run build"
alias nrdp="npm run deploy"
alias nrdv="npm run dev"
alias nre="npm run eject"
alias nrst="npm run start"
alias nrsr="npm run serve"
alias nrt="npm run test"
alias nrw="npm run watch"